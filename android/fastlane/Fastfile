

default_platform(:android)

platform :android do
  desc "Lan for Android Firebase App Distribution"
  lane :firebase_distribution do
    # Run shell commands separately
    flutter(
      command: "clean",
      project_dir: ".."
    )
    flutter(
      command: "pub get",
      project_dir: ".."
    )
    flutter(
      command: "build apk",
      flavor: "production",
      target: "lib/main_production.dart",
      project_dir: "..",
      args: "--no-tree-shake-icons --android-skip-build-dependency-validation"
    )
    # Firebase App Distribution configuration
    firebase_app_distribution(
      app: "1:321253441126:android:3dd31da1dae243cd1337a7",
      firebase_cli_token: ENV["FIREBASE_CLI_TOKEN"],
      android_artifact_type: "APK",
      android_artifact_path: "../build/app/outputs/flutter-apk/app-production-release.apk",
      testers: "aboodshban@gmail.com",
      release_notes: "Automated CI build"
    )
  end
end
